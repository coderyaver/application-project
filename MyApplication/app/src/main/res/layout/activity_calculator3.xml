<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/holo_orange_dark"
    tools:context="com.example.yavar.myapplication.Calculator"
    tools:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@android:color/holo_orange_dark"
        tools:context="com.example.yavar.myapplication.Calculator"
        tools:padding="0dp"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/backgd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:visibility="visible"
            tools:background="#60ffdc"
            tools:context="com.example.yavar.myapplication.Calculator"
            tools:onClick="onClickNumber"
            tools:padding="0dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:gravity="bottom|right"
                android:maxHeight="17dp"
                android:maxLines="2"
                android:nestedScrollingEnabled="true"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="70sp"
                tools:background="@android:color/white"
                tools:layout_height="152dp"
                tools:layout_width="match_parent"
                tools:gravity="bottom|right"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="155dp"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="7"
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="8"
        android:textAlignment="center"
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="9"
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"
        android:text="+"
        android:textColor="#aaa"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn7"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="4"
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn7"
        android:layout_toEndOf="@+id/btn4"
        android:layout_toRightOf="@+id/btn4"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="5"
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn9"
        android:layout_toLeftOf="@+id/btnPlus"
        android:layout_toStartOf="@+id/btnPlus"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="6"
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/btn6"
        android:layout_toEndOf="@+id/btn6"
        android:layout_toRightOf="@+id/btn6"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"
        android:text="-"
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn4"
        android:layout_toLeftOf="@+id/btn5"
        android:layout_toStartOf="@+id/btn5"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="1"
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="2"
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn5"
        android:layout_toEndOf="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="3"
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn6"
        android:layout_toEndOf="@+id/btn3"
        android:layout_toRightOf="@+id/btn3"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"
        android:text="X"
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn1"
        android:layout_toLeftOf="@+id/btn2"
        android:layout_toStartOf="@+id/btn2"
        android:background="#4d4d4d"
        android:onClick="onClickClear"
        android:text="C"
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:background="#4d4d4d"
        android:onClick="onClickNumber"
        android:text="0"
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn2"
        android:layout_toEndOf="@+id/btn0"
        android:layout_toRightOf="@+id/btn0"
        android:background="#4d4d4d"
        android:onClick="onClickEqual"
        android:text="="
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btn3"
        android:layout_toEndOf="@+id/btnEquals"
        android:layout_toRightOf="@+id/btnEquals"
        android:background="#4d4d4d"
        android:onClick="onClickOperator"
        android:text="/"
        android:textColor="#aaa"
        android:textSize="35sp" />

    <Button
        android:id="@+id/button13"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnClear"
        android:background="#ff000000"
        android:text="Button" />

</RelativeLayout>
